<%- contentFor('content') %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
        <h2 class="post-title">
          <%= data.post.getTitle() %>
        </h2>
        <p class="post-meta">Posted by
          <span class="font-bold">Admin</span>
          on <%= data.post.getCreatedAt() %></p>
        <p class="post-subtitle font-300">
          <%= data.post.getDescription() %>
        </p>
      </div>
      <hr>
    </div>
  </div>
</div>