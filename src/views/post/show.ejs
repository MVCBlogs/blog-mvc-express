<%- contentFor('content') %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
        <h2 class="post-title">
          <%= data.post.getTitle() %>
        </h2>
        <p class="post-meta">Posted by
          <span class="font-bold">Admin</span>
          on <%= data.post.getCreatedAt() %></p>
        <p class="post-subtitle font-300">
          <%= data.post.getDescription() %>
        </p>
      </div>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h2 class="post-title">Comments</h2>
      <ul>
        <% data.post.getComments().forEach(function(comment){ %>
        <li><%= comment.getMessage() %> - <%= comment.getCreatedAt() %>
          <form method="POST" action="/posts/deleteComment/<%= comment.getId() %>">
            <input type="hidden" name="post_id" value="<%= data.post.getId() %>" />
            <button type="submit" onclick="return confirm('Are you sure to delete this comment?');" class="submit-delete">
                <i class="fa fa-trash-alt" aria-hidden="true"></i>
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
      <hr>
      <br />
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="card">
        <div class="card-header">
          Create a new comment
        </div>
        <div class="card-body">
          <form method="POST" action="/posts/saveComment">
            <% if (data.messageError) { %>
            <ul class="errors">
              <li><%= data.messageError %></li>
            </ul>
            <% } %>
            <div class="form-group">
              <label>Comment message:</label>
              <textarea class="form-control" required name="message" rows="3" placeholder="Enter message"></textarea>
            </div>
            <input type="hidden" name="post_id" value="<%= data.post.getId() %>" />
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>